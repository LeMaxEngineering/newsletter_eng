{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@neewsletter/ui-kit": ["packages/ui-kit/src/index.ts"],
      "@neewsletter/ui-kit/*": ["packages/ui-kit/src/*"],
      "@neewsletter/block-schema": ["packages/block-schema/src/index.ts"],
      "@neewsletter/config/*": ["packages/config/*"]
    }
  },
  "include": ["apps", "packages", "services", "tests", "playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}
